      <Reference Include="UnityEngine.UI">
        <HintPath>..\..\Program Files (x86)\Steam\steamapps\common\Yellow Taxi Goes Vroom\Yellow Taxi Goes Vroom_Data\Managed\UnityEngine.UI.dll</HintPath>
